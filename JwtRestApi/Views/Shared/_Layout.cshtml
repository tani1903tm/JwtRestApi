<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Management System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üîê</text></svg>">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-brand">
                <h1>User Management System</h1>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="navbar-nav">
                    <span class="nav-item">Welcome, @User.Identity.Name!</span>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="nav-form">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                </div>
            }
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p> User Management System</p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
